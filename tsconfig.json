{
    "compilerOptions": {
      
      "target": "es2022",           
      "module": "commonjs",                   
      "esModuleInterop": true, 
      "allowJs": true,
      "noUncheckedIndexedAccess": true,
      "forceConsistentCasingInFileNames": true,    
      "strict": true,   
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./",
      "paths": {
        "*":["src/*"]
      }                             
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules","jest.config.js"]
  }